{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "@typescript-eslint", "prettier"],
    "rules": {
        "import/no-unresolved": "error",
        "indent": ["error", 4],
        "semi": ["error", "always"],
        "jsx-quotes": [2, "prefer-single"],
        "prettier/prettier": [
            "error",
            {
                "endOfLine": "auto"
            },
            "warn",
            {
                "singleQuote": true,
                "semi": true
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        },
        "react": {
            "version": "detect"
        }
    }
}
